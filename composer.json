{
    "name": "zk2/microsoft-identity-auth",
    "description": "Build API clients for PHP with Microsoft identity authentication",
    "homepage": "https://github.com/zk2/microsoft-identity-auth",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Evgeniy Budanov",
            "email": "budanov.ua@gmail.com"
        }
    ],
    "require": {
        "microsoft/kiota-abstractions": "^1.4",
        "symfony/http-client": "^7",
        "nyholm/psr7": "^1.8",
        "microsoft/kiota-http-guzzle": "^1.3",
        "microsoft/kiota-authentication-phpleague": "^1.3",
        "microsoft/kiota-serialization-json": "^1.3",
        "microsoft/kiota-serialization-text": "^1.1",
        "microsoft/kiota-serialization-form": "^1.1",
        "microsoft/kiota-serialization-multipart": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Zk2\\MicrosoftIdentityAuth\\": "src/Zk2/MicrosoftIdentityAuth"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "tbachert/spi": true
        }
    }
}
